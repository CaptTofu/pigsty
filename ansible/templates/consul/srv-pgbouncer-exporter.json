{
  "service": {
    "name": "pgbouncer-exporter",
    "port": 9631,
    "tags": [
      "pgbouncer-exporter",
      "exporter"
    ],
    "meta": {
      "type": "exporter",
      "role": "{{ role }}",
      "seq": "{{ seq }}",
      "instance": "{{ cluster }}-{{seq}}",
      "service": "{{ cluster }}-{{ role }}",
      "cluster": "{{ cluster }}"
    },
    "check": {
      "http": "http://{{ inventory_hostname }}:9631/",
      "interval": "5s",
      "timeout": "1s"
    }
  }
}