{
  "service": {
    "name": "pgbouncer",
    "port": {{ pgbouncer_port }},
    "tags": [
      "pgsql",
      "{{ pg_role }}",
      "{{ pg_cluster }}"
    ],
    "meta": {
      "type": "pgbouncer",
      "role": "{{ pg_role }}",
      "seq": "{{ pg_seq }}",
      "instance": "{{ pg_cluster }}-{{ pg_seq }}",
      "service": "{{ pg_cluster }}-{{ pg_role }}",
      "cluster": "{{ pg_cluster }}",
      "version": "{{ pg_version }}"
    },
    "check": {
      "tcp": "127.0.0.1:{{ pgbouncer_port }}",
      "interval": "15s",
      "timeout": "1s"
    }
  }
}