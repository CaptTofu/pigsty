export METADB_URL="service=meta"

#==================================#
# passing environ for grafana & other
export LOKI_ENDPOINT={{ loki_endpoint | regex_replace('\${meta_ip}', meta_ip ) }}
export GRAFANA_ENDPOINT={{ grafana_endpoint | regex_replace('\${meta_ip}', meta_ip ) }}
