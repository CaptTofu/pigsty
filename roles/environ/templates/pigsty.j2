  export PIGSTY_HOME="${HOME}/pigsty"
fi
if [[ -d /etc/pigsty ]]; then
  export PIGSTY_DASHBOARD_DIR=/etc/pigsty/dashboards
  export PIGSTY_DATASOURCE_DIR=/etc/pigsty/datasource
  export PIGSTY_PLAYBOOK_DIR=/etc/pigsty/playbooks
fi

