#!/bin/bash
set -euo pipefail

#==============================================================#
# File      :   bin/createpg
# Ctime     :   2021-07-15
# Mtime     :   2022-02-22
# Desc      :   Wrapper of pgsql playbook
# Usage     :   bin/createpg <cluster> [...tasks]
# Path      :   bin/createpg
# Depend    :   pigsty playbook pgsql.yml
# Copyright (C) 2018-2022 Ruohang Feng
#==============================================================#

#==============================================================#
# environment
#==============================================================#
APP_NAME="$(basename $0)"
APP_DIR="$(cd $(dirname $0) && pwd)"
PIGSTY_HOME=$(cd $(dirname ${APP_DIR}) && pwd)


#==============================================================#
# log util
#==============================================================#
__CN='\033[0m'    # no color
__CB='\033[0;30m' # black
__CR='\033[0;31m' # red
__CG='\033[0;32m' # green
__CY='\033[0;33m' # yellow
__CB='\033[0;34m' # blue
__CM='\033[0;35m' # magenta
__CC='\033[0;36m' # cyan
__CW='\033[0;37m' # white
function log_info() {  printf "[${__CG} OK ${__CN}] ${__CG}$*${__CN}\n";   }
function log_warn() {  printf "[${__CY}WARN${__CN}] ${__CY}$*${__CN}\n";   }
function log_error() { printf "[${__CR}FAIL${__CN}] ${__CR}$*${__CN}\n";   }
function log_debug() { printf "[${__CB}HINT${__CN}] ${__CB}$*${__CN}\n"; }
function log_input() { printf "[${__CM} IN ${__CN}] ${__CM}$*\n=> ${__CN}"; }
function log_hint()  { printf "${__CB}$*${__CN}\n"; }
#==============================================================#


#==============================================================#
# parameters
#==============================================================#
PG_CLUSTER=${1-''}
shift;
PG_TASKS="$@"

if [[ -z "${PG_CLUSTER}" ]]; then
	log_error "pg_cluster is empty"
	log_hint "bin/createpg <pg_cluster>   # define cluster in config first"
	exit 1
fi

PLAYBOOK_TAGS=""
if [[ ! -z "${PG_TASKS}" ]]; then
    PLAYBOOK_TAGS="-t $@"
fi
#==============================================================#


#==============================================================#
cd ${PIGSTY_HOME} >/dev/null
#==============================================================#
log_info "init nodes for ${PG_CLUSTER} : ${PIGSTY_HOME}/nodes.yml -l ${PG_CLUSTER} ${PLAYBOOK_TAGS}"
#==============================================================#
${PIGSTY_HOME}/nodes.yml -l ${PG_CLUSTER} ${PLAYBOOK_TAGS}

#==============================================================#
log_info "init pgsql ${PG_CLUSTER} : ${PIGSTY_HOME}/pgsql.yml -l ${PG_CLUSTER} ${PLAYBOOK_TAGS}"
${PIGSTY_HOME}/pgsql.yml -l ${PG_CLUSTER} ${PLAYBOOK_TAGS}
#==============================================================#