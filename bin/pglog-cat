#!/bin/bash
set -euo pipefail

#==============================================================#
# File      :   bin/pglog-cat
# Ctime     :   2021-09-24
# Mtime     :   2021-09-24
# Desc      :   cat postgres log
# Usage     :   pglog-cat 10.10.10.11 2021-09-24
# Path      :   bin/pglog-cat
# Depend    :   ssh cat
# Copyright (C) 2018-2021 Ruohang Feng
#==============================================================#

NODE=${1-'127.0.0.1'}
TODAY=$(date '+%Y-%m-%d')
DATESTR=${2-${TODAY}}
ssh -t "${NODE}" "sudo cat /pg/data/log/postgresql-${DATESTR}.csv"