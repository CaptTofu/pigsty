#!/bin/bash
set -euo pipefail

#==============================================================#
# File      :   get_pkg
# Ctime     :   2021-04-23
# Mtime     :   2021-04-23
# Desc      :   Get Pigsty Offline Installation Packages
# Path      :   bin/get_pkg
# Depend    :   curl
# Copyright (C) 2018-2021 Ruohang Feng
#==============================================================#

PROG_NAME="$(basename $0))"
PROG_DIR="$(cd $(dirname $0) && pwd)"

VERSION=${1-0.9}

# download pigsty.tgz to /tmp
printf "\033[0;32m[INFO] download pkg.tgz v${VERSION} \033[0m\n" >&2
curl http://pigsty-1304147732.cos.accelerate.myqcloud.com/v${VERSION}/pkg.tgz -o /tmp/pkg.tgz
